<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <TextView
        android:text="Crowd Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CrowdStatus"
        android:fontFamily="monospace"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryText"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"/>

    <TextView
        android:text="Customer Service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="109dp"
        android:id="@+id/serviceType"
        android:textSize="16dp"
        android:layout_below="@+id/CrowdStatus"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Add To Favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/AddToFavorite"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/sample"/>

    <TextView
        android:text="##"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView8"
        android:layout_toRightOf="@+id/textView8"
        android:layout_toEndOf="@+id/textView8"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:id="@+id/wating" />

    <TextView
        android:text="Number of wating customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_marginBottom="28dp"
        android:id="@+id/textView8"
        android:layout_above="@+id/AddToFavorite"
        android:layout_alignLeft="@+id/CrowdStatus"
        android:layout_alignStart="@+id/CrowdStatus" />

    <TextView
        android:text="BranchName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="49dp"
        android:id="@+id/BranchName"
        android:textSize="16dp"
        android:layout_below="@+id/Route"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Route"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Route"
        android:layout_alignBaseline="@+id/serviceType"
        android:layout_alignBottom="@+id/serviceType"
        android:layout_toRightOf="@+id/AddToFavorite"
        android:layout_toEndOf="@+id/AddToFavorite"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:background="@drawable/sample"/>

    <Button
        android:text="Refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Refresh"
        android:layout_alignBaseline="@+id/serviceType"
        android:layout_alignBottom="@+id/serviceType"
        android:layout_toLeftOf="@+id/AddToFavorite"
        android:layout_toStartOf="@+id/AddToFavorite"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/sample"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BranchName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:text="Waiting time" />

    <TextView
        android:id="@+id/waiting_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"

        android:text="00:00" />
    <Button
        android:id="@+id/Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="0dp"
        android:height="8dp"
        android:drawableRight="@mipmap/ic_home_black_24dp"
        android:background="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:padding="16dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>