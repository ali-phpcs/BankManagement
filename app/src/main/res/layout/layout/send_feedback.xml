<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <TextView
        android:text=" 1 is Very Bad, 2 is Bad, 3 is Good, 4 is Very Good, and 5 is Excellent "
        android:textSize="14dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:id="@+id/textView"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <Button
        android:id="@+id/Send"
        style="?android:textAppearanceSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:background="@drawable/sample"
        android:text="Send"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp"
        android:layout_above="@+id/textView2">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/questions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.87"
                    android:text="  Question"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="18dp" />

                <TextView
                    android:layout_width="74dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:id="@+id/answer"
                    android:text="Answer"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimaryText"/>
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="  Is application information accurate"
                    android:layout_width="260dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/q1"
                    android:textSize="14dp"/>

                <EditText
                    android:id="@+id/a1"
                    android:layout_width="73dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.93"
                    android:ems="10"
                    android:hint="Your Rate"
                    android:inputType="number"
                    android:textSize="14dp" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:text="  Is the application fast"
                    android:layout_width="214dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/q2"
                    android:textSize="14dp"
                    android:layout_weight="0.55" />

                <EditText
                    android:id="@+id/a2"
                    android:layout_width="35dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.62"
                    android:ems="10"
                    android:hint="Your Rate"
                    android:inputType="number"
                    android:textSize="14dp" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="1">

                <TextView
                    android:text="  Did the design suit you"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/q3"
                    android:textSize="14dp"
                    android:layout_weight="0.89" />

                <EditText
                    android:id="@+id/a3"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.26"
                    android:ems="10"
                    android:hint="Your Rate"
                    android:inputType="number"
                    android:textSize="14dp" />
            </LinearLayout>

        </TableRow>

    </TableLayout>

    <TextView
        android:text="Send Feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_weight="1"
        android:fontFamily="monospace"
        android:textSize="25sp"
        android:textColor="@color/colorPrimaryText"
        android:textAlignment="center"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"/>

    <EditText
        android:id="@+id/a4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/Send"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Comment: "
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryText"
        android:layout_above="@+id/a4"
        android:layout_alignLeft="@+id/a4"
        android:layout_alignStart="@+id/a4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate our application :"
        android:textSize="18dp"
        android:textColor="@color/colorPrimaryText"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />
    <Button
        android:id="@+id/Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="0dp"
        android:height="8dp"
        android:drawableRight="@mipmap/ic_home_black_24dp"
        android:background="@color/colorAccent"
        android:padding="16dp"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>